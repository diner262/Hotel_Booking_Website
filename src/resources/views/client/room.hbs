<link rel="stylesheet" href="./css/room.css">
<div class="room" id="room">
    <div class=" container d-lg-block d-none position-relative" id="divRoom">
        {{#each rooms as |room index|}}
        {{#if (equal status "avaliable")}}
        <div class="col-12 room-page-room-{{even index}} rooms position-relative">
            <div id="room{{@index}}-carousel" class="carousel position-relative col-9 slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img loading="lazy" src="/img/rooms/room1.jpg" class="d-block w-100" alt="image">
                    </div>
                    <div class="carousel-item">
                        <img loading="lazy" src="/img/rooms/phong1.jpg" class="d-block w-100" alt="image">
                    </div>
                    <div class="carousel-item">
                        <img loading="lazy" src="/img/rooms/room3.jpg" class="d-block w-100" alt="image">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button">
                    <span class="carousel-control-prev-icon" data-bs-target="#room{{@index}}-carousel"
                        data-bs-slide="prev" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#room{{@index}}-carousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="caption content position-absolute p-5">
                <h5 class="fs-28 text-blue1"><a href="#" class="text-blue1">{{room_name}}</a></h5>
                <hr>
                <p class="m-0 fw-500 d-flex fs-14"><span>Rộng:</span> <span
                        class="position-absolute ps-5 ms-4 fs-14">{{acreage}}m2</span></p>
                <p class="m-0 fw-500 d-flex fs-14"><span>Số người:</span> <span
                        class="position-absolute ps-5 ms-4 fs-14">{{adult}} người lớn + {{children}} trẻ em dưới 12
                        tuổi</span></p>
                <p class="fw-500 d-flex fs-14"><span>Giường:</span> <span class="position-absolute ps-5 ms-4">1
                        giường lớn + 1 giường đôi</span></p>
                <p class="m-0 fs-14 descript lh-20">{{description}}
                </p>

                <div class="text-center">
                    <a href="/detail/{{room_code}}"><button
                            class="btn btn-primary mt-3 view-more fs-14 bg-blue border-0"><span class="pt-2px">Xem
                                chi tiết</span></button></a>

                    <a href="/bookroom/{{room_code}}"><button
                            class="btn btn-primary mt-3 view-more fs-14 bg-blue border-0"><span class="pt-2px">Đặt
                                ngay</span></button></a>
                </div>

            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>
